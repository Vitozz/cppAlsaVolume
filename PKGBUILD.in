# Maintainer: @PACKAGE_MAINTAINER@
pkgname=@CPACK_PACKAGE_NAME@-git
pkgver=@CPACK_PACKAGE_VERSION@
pkgrel=@CPACK_PACKAGE_RELEASE@
pkgdesc="@CPACK_PACKAGE_DESCRIPTION@"
arch=('i686' 'x86_64')
url="@PACKAGE_URL@"
license=('GPL3')
depends=( @GTK_DEP@ 'alsa-lib' 'pkg-config'
          'intltool' 'glibmm' @DBUSMENU_DEP@)
optdepends=('pulseaudio: support PulseAudio'
            'pipewire-pulse: support PulseAudio using PipeWire')
makedepends=('git' 'cmake' 'glib2-devel')
conflicts=(@CPACK_PACKAGE_NAME@)
source=(git+https://github.com/Vitozz/cppAlsaVolume)
md5sums=('SKIP') 

_gitroot=https://github.com/Vitozz/cppAlsaVolume
_gitname=cppAlsaVolume

is_installed() {
    pacman -Q $1 &> /dev/null
}

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi
  msg "Updating submodules..."
  cd "$srcdir/$_gitname"
    git submodule init
    git submodule update

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  mkdir -p "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build/"
  
  # BUILD HERE

  if is_installed "pipewire-pulse" || is_installed "pulseaudio"; then
    use_pulse="ON"
  else
    use_pulse="OFF"
  fi

  cmake -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DUSE_PULSE=$use_pulse \
    -DUSE_SNI=@USE_SNI@ \
    -DUSE_GTK3=@USE_GTK3@ \
    "$srcdir/$_gitname"

  make
}

package() {
  cd "$srcdir/$_gitname-build/"
  make DESTDIR="$pkgdir/"  install

}
